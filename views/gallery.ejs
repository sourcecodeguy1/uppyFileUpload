<% var title = "Gallery"; %>

<% include ../partials/top.ejs %>

<div class="container">

    <div class="row mb-4">
        <div class="col-sm-10">
            <h2>This is the <%= title%> page</h2>
        </div>
        <div class="col-sm-2">
            <a class="btn btn-info float-lg-right" href="/">Back</a>
        </div>
    </div>

    <div class="row">

        <% for(let i = 0; i < data.length; i++){ %>

            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 mb-2">
                <div class="card">
                    <img class="card-img-top myImages" src="/images/<%= data[i].photo_name %>" />
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">This image will be deleted automatically in 1 hour. Or hit the delete button.</p>
                        <a href="#" class="btn btn-danger btn_delete" data-photoName="<%= data[i].photo_name%>" data-id="<%= data[i].id %>">Delete</a>
                    </div>
                </div>
            </div>

        <%}%>

    </div>

</div>
<script src="/javascripts/delete_image.js"></script>
<% include ../partials/bottom.ejs %>
